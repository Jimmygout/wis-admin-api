

{% block title %}Concert{% endblock %}

{% block body %}
    <h1>Concert</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ concert.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ concert.designation }}</td>
            </tr>
            <tr>
                <th>DateConcert</th>
                <td>{{ concert.dateConcert ? concert.dateConcert|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Publier</th>
                <td>{{ concert.publier ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Chanteur</th>
                <td>{{ concert.chanteur }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img style="max-width:20%" src="{{ asset('uploads/' ~ concert.picture) }}" class="responsive-img"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('concert_index') }}">back to list</a>

    <a href="{{ path('concert_edit', {'id': concert.id}) }}">edit</a>

    {{ include('concert/_delete_form.html.twig') }}
{% endblock %}
