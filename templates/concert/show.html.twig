

{% block title %}Concert{% endblock %}

{% block body %}
    <h1>Concert</h1>

     <div class="row">
                <div class="col s12 m-t-30">
                        <a href="{{ path('concert_new') }}" class="btn btn blue darken-4" style="float: right">Ajouter</a>
                    <h5>Les Concerts</h5>
                    <table>
                        <tr>
                            <th>#</th>
                            <th>Chanteur</th>
                            <th>DÃ©signation</th>
                            <th>Date concert</th>
                            <th>Image</th>
                        </tr>
                        {% set i = 1 %}
                        {% for concert in concerts %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>
                                    <span class="badge {{ concert.publier ? 'blue' : 'red' }}">
                                        {{ concert.publier ? 'oui' : 'non' }}
                                    </span>
                                </td>
                                <td>{{ concert.dateConcert|date('d/m/Y') }}</td>
                                <td>
                                    <a href="{{ path('concert_edit', {'id': concert.id}) }}"><i class="material-icons blue-text">edit</i></a>
                                    <a href="{{ path('concert_delete', {'id': concert.id}) }}"><i class="material-icons red-text">delete</i></a>
                                </td>
                                <td style="padding:0px 0px 0px 0px"><img style="width: 3.5rem;" src="{{ asset('uploads/' ~ concert.picture) }}" class=""></td>
                         
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>
{% endblock %}
